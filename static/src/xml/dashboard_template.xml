<!-- returns_management/static/src/xml/dashboard_template.xml -->
<odoo>
  <template id="return_dashboard_template" name="Return Dashboard Template">
    <t t-name="returns_management.return_dashboard_template">
      <div class="o_control_panel">
        <h2>Dashboard - Returns</h2>
      </div>
      <div class="container" style="padding: 20px;">
        <div class="row">
          <div class="col-6">
            <div class="card shadow-sm p-3"
                 t-on-click="() => open_action('returns_management.action_return_order_purchase')">
              <h3>مرتجعات المشتريات</h3>
              <p>عرض جميع مرتجعات المشتريات</p>
            </div>
          </div>
          <div class="col-6">
            <div class="card shadow-sm p-3"
                 t-on-click="() => open_action('returns_management.action_return_order_sale')">
              <h3>مرتجعات المبيعات</h3>
              <p>عرض جميع مرتجعات المبيعات</p>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
