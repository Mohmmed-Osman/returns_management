<odoo>
    <record id="view_return_order_tree" model="ir.ui.view">
        <field name="name">return.order.list</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="type"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <record id="view_return_order_form" model="ir.ui.view">
        <field name="name">return.order.form</field>
        <field name="model">return.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            name="action_set_to_draft"
                            icon="fa-undo"
                            string="Set to Draft"
                            type="object"
                            class="btn-secondary"
                            confirm="Are you sure you want to reset this order to draft?"
                            invisible="state in ('draft', 'cancelled')"
                    />
                    <button
                            name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"
                    />
                    <button
                            name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state in ('cancelled', 'done')"
                    />
                    <button
                            name="action_create_credit_note"
                            type="object"
                            string="Create Credit Note"
                            class="btn-primary"
                            invisible="state != 'done'"
                    />

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,delivered,done"
                           statusbar_colors="{'cancel': 'red'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                                type="object"
                                name="action_view_picking"
                                string="Deliveries"
                                class="oe_stat_button"
                                icon="fa-truck"
                                context="{'search_default_return_order_id': id}"
                        />
                        <button
                                type="object"
                                name="action_view_credit_note"
                                string="Credit Notes"
                                class="oe_stat_button"
                                icon="fa-file-text-o"
                                context="{'search_default_return_order_id': id}"

                        />
                    </div>

                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="warehouse_id"/>
                            <field name="origin"/>
                            <field name="state" invisible="1"/>
                            <field name="company_id" widget="res_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Return Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id" widget="many2one_quick_entry"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="delivered_qty" readonly="1"/>
                                    <field name="invoiced_qty" readonly="1"/>
                                    <field name="reason"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>